{% extends "./../../layouts/adminLayout.njk" %}

{% block content %}

  <form class="p-3 needs-validation" style="max-width: 320px; width: 100%;" action="/auth/login" method="post" novalidate>
    <fieldset>
      {% if error | length %}
        <div class="alert alert-danger" role="alert">
          {{ error }}
        </div>
      {% endif %}

      <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}">
        <div class="invalid-feedback">
          Пожалуйста, введите действительный email.
        </div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Пароль</label>
        <input type="password" class="form-control" id="password" name="password">
        <div class="invalid-feedback">
          Пожалуйста, введите пароль.
        </div>
      </div>

      <div class="mb-3">
        <label for="confirm" class="form-label">Повторите пароль</label>
        <input type="password" class="form-control" id="confirm" name="confirm">
        <div class="invalid-feedback">
          Пожалуйста, повторите пароль.
        </div>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button type="submit" class="btn btn-primary">Сохранить</button>

    </fieldset>
  </form>
{% endblock %}
